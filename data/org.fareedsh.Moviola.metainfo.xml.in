<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>org.fareedsh.Moviola</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>
    <name>Moviola</name>
    <summary>Simple Video editor</summary>
    <description>
        <p>
            Simple Video editor to satisfy basic video editing needs. Meant to
            mirror functionality found in Google photos.
        </p>
        <p>Supports:</p>
        <ul>
            <li>Cropping (freely or preset aspect ratio)</li>
            <li>Rotating</li>
            <li>Flipping</li>
            <li>Trimming</li>
            <li>Selecting Output Container</li>
            <li>Mute audio</li>
        </ul>
        <p>Will add in future updates</p>
        <ul>
            <li>Text/pen markup</li>
            <li>Basic colour balance settings</li>
            <li>Playback speed</li>
            <li>Normalised audio</li>
            <li>Loseless trimming if output is not changed</li>
        </ul>
    </description>
    <launchable type="desktop-id">org.fareedsh.Moviola.desktop</launchable>

    <url type="homepage">https://github.com/rntrtul/moviola</url>
    <content_rating type="oars-1.1"/>
</component>